import Layout from '../layouts/Layout.astro';
import ProjectAnimation from '../components/ProjectAnimation.astro';
---
<Layout title="Project 002 | GSAP / WEBGL COLLECTION">
  <nav class="navbar">
    <a href="/" class="navbar-left">KINGTROY</a>
    <a href="/" class="back-arrow">←</a>
  </nav>
  <div class="container">
    <div class="project-header">
      <div class="project-category">GSAP / WEBGL</div>
      <h1 class="project-title">Animated Responsive Landing Page Website using GSAP</h1>
    </div>
    <div class="project-media">
      <img class="project-image" src="assets/img_1.jpg" alt="Project 002 Demo">
    </div>
    <div class="project-notes">
      <h2 class="notes-title"></h2>
      <p class="notes-content">
        Design a modern, animated, and fully responsive landing page using GSAP, HTML, CSS, and JavaScript. This clean and elegant layout is built for creative studios, personal portfolios, or businesses that want a sleek digital presence with immersive motion design.

With smooth transitions, bold typography, and a dark/light mode option, this UI concept balances visual hierarchy and animation finesse — creating a high-end experience that feels both professional and refined.
      </p>
    </div>
    <div class="code-section">
      <div class="code-header">
        <span class="code-title">HTML</span>
        <button class="copy-btn" onclick="copyCode('html-code')">Copy</button>
      </div>
      <div class="code-content" id="html-code"><pre><code>&lt;!-- HTML code for project 002 --&gt;
</code></pre></div>
    </div>
    <div class="code-section">
      <div class="code-header">
        <span class="code-title">CSS</span>
        <button class="copy-btn" onclick="copyCode('css-code')">Copy</button>
      </div>
      <div class="code-content" id="css-code"><pre><code>/* CSS code for project 002 */
</code></pre></div>
    </div>
    <div class="code-section">
      <div class="code-header">
        <span class="code-title">JavaScript</span>
        <button class="copy-btn" onclick="copyCode('js-code')">Copy</button>
      </div>
      <div class="code-content" id="js-code"><pre><code>// JavaScript code for project 002
</code></pre></div>
    </div>
  </div>
  <ProjectAnimation />
</Layout>