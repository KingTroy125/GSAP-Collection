<script>
  import { gsap } from 'gsap';
  
  document.addEventListener('DOMContentLoaded', () => {
    // Project page animations
    const projectTl = gsap.timeline();
    
    projectTl
      .from('.navbar', { 
        opacity: 0, 
        y: -20, 
        duration: 0.6,
        ease: 'power2.out' 
      })
      .from('.project-header', {
        opacity: 0,
        y: 30,
        duration: 0.8,
        ease: 'power3.out'
      }, '-=0.3')
      .from('.project-image', {
        opacity: 0,
        scale: 0.95,
        duration: 1,
        ease: 'power2.out'
      }, '-=0.5')
      .from('.project-notes', {
        opacity: 0,
        y: 40,
        duration: 0.8,
        ease: 'power2.out'
      }, '-=0.7')
      .from('.code-section', {
        opacity: 0,
        y: 30,
        stagger: 0.15,
        duration: 0.7,
        ease: 'power2.out'
      }, '-=0.5');
  });
</script>
