---
export interface Props {
  number: string;
  name: string;
  image: string;
  href?: string;
}
const { number, name, image, href } = Astro.props;
---
{href ? (
  <a href={href} style="text-decoration:none;display:block;">
    <div class="project-card">
      <img class="project-image" src={image} alt="Project Preview">
      <div class="project-overlay">
        <div class="project-number">{number}</div>
        <div class="project-name">{name}</div>
      </div>
    </div>
  </a>
) : (
  <div class="project-card">
    <img class="project-image" src={image} alt="Project Preview">
    <div class="project-overlay">
      <div class="project-number">{number}</div>
      <div class="project-name">{name}</div>
    </div>
  </div>
)} 